# Environment variables template
# Copy this file to .env and update values for your environment

# === Database Configuration ===
DATABASE_URL=postgresql://deita:deita@postgres:5432/deita

# === Object Storage (MinIO/S3) ===
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=deita
S3_SECRET_KEY=deita123
S3_BUCKET_NAME=deita-files

# === Email Configuration ===
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@deita.app

# === Security ===
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# === Application Settings ===
ENVIRONMENT=development
DEBUG=true
APP_NAME=Deita
APP_VERSION=0.1.0

# === DuckDB Configuration ===
DUCKDB_PATH=/app/data/deita.duckdb

# === AI Service Configuration ===
AI_MODEL_NAME=local-llm
AI_MODEL_ENDPOINT=http://localhost:8001
AI_MODEL_API_KEY=

# === Workspace Cleanup Configuration ===
# Retention periods (in days)
ORPHANED_WORKSPACE_RETENTION_DAYS=15
OWNED_WORKSPACE_RETENTION_DAYS=30

# Warning intervals (comma-separated days before deletion)
# Default: 15,10,5,3,1
WORKSPACE_WARNING_INTERVALS=15,10,5,3,1

# Cleanup job schedule (cron expression: daily at 2 AM by default)
CLEANUP_JOB_CRON=0 2 * * *

# Enable/disable automatic cleanup job
CLEANUP_JOB_ENABLED=true

